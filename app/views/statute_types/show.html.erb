<p id="notice"><%= notice %></p>

<h3><%= @statute_type.name  %></h3>

<ul class="nav nav-tabs" style="margin-bottom: 10px;">
  <li class="active"><a href="#statutes" data-toggle="tab">Statutes</a></li>
  <li><a href="#text" data-toggle="tab">Text</a></li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active" id="statutes">
    <table class="table table-striped table-bordered table-hover">
      <tr>
        <th>Name</th>
        <th>Jurisdiction</th>
        <th></th>
      </tr>

    <% @statute_type.statutes.each do |statute| %>
      <tr>
        <td><%= statute.name %></td>
        <td><%= statute.jurisdiction.name if statute.jurisdiction %></td>
        <td><%= link_to 'Edit', edit_statute_type_statute_path(@statute_type, statute), :class => "btn btn-primary btn-xs" %>
        <%= link_to 'Destroy', statute_type_statute_path(@statute_type, statute), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" %></td>
      </tr>

    <% end %>
    </table>
    <%= link_to 'Add Statute', new_statute_type_statute_path(@statute_type), :class => 'btn btn-success' %>
  </div>
  <div class="tab-pane" id="text">
        <table class="table table-striped table-bordered table-hover">
      <tr>
        <th>Text</th>
        <th>Jurisdiction</th>
        <th></th>
      </tr>
      <% @statute_type.text_entries.each do |text_entry| %>
        <tr>
          <td><%= raw text_entry.shorten_text_value%></td>
          <td><%= text_entry.jurisdiction.name if text_entry.jurisdiction %></td>
          <td><%= link_to 'Edit', edit_statute_type_text_entry_path(@statute_type, text_entry), :class => "btn btn-primary btn-xs" %>
          <%= link_to 'Destroy', statute_type_text_entry_path(@statute_type, text_entry), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" %></td>
        </tr>
      <% end %>
    </table>
    <%= link_to 'Add Jurisdiction Text', new_statute_type_text_entry_path(@statute_type), :class => 'btn btn-success' %>
  </div>
</div>
