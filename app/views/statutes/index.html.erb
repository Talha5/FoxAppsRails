<% @statutes.each do |statute| %>
  <tr>
    <td><%= statute.name %></td>
    <td><%= link_to 'Show', statute %></td>
    <td><%= link_to 'Edit', edit_statute_path(statute) %></td>
    <td><%= link_to 'Destroy', statute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

