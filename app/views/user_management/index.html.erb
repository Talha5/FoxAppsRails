<h1>Users</h1>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td>
    <%= link_to 'Destroy', user_management_path(user), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New', new_user_management_path, :class => "btn btn-success"  %>