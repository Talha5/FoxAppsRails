<div class="col-xs-12 col-lg-10 col-lg-offset-1" style="border:1px solid #033C73;background-color:#EAF2FA;color:#033C73; padding:5px;">
	<div class='col-xs-3' style="float:right;">
	<% if @blockText.order_count > 1 %>
		<%= link_to move_up_page_blocks_path(@blockText.id), :class => 'col-xs-12 btn btn-info', :style => 'float:right;margin-top:5px;' do %>
			<i class="fa fa-sort-asc"></i> Move Up
		<% end %>
	<% end %>
	<% if @blockText.order_count < @blockText.last %>
		<%= link_to move_down_page_blocks_path(@blockText.id), :class => 'col-xs-12 btn btn-info', :style => 'float:right;margin-top:5px;' do %>
			<i class="fa fa-sort-desc"></i> Move Down
		<% end %>
	<% end %>
	</div>
	<h2 style="margin-top:5px;"> <%= @blockText.block_type.name %></h2>

	<div class="col-xs-12" style="padding:0px 30px;">
		<%= @blockText.content_value.html_safe %>
	</div>

	<div class="col-xs-12">
		<%= link_to 'Edit Text', edit_page_blocks_path(@blockText.id), :remote => true, :class => 'btn btn-success' %>
		<%= link_to 'Delete Text', destroy_page_blocks_path(@blockText.content_page_id, @blockText.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
	</div>
</div>