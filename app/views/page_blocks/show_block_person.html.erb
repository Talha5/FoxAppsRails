<div class="col-xs-12 col-lg-10 col-lg-offset-1" style="border:1px solid #033C73;background-color:#EAF2FA;color:#033C73; padding:5px;">
	<div class='col-xs-3' style="float:right;">
		<% if @blockPerson.order_count > 1 %>
			<%= link_to move_up_page_blocks_path(@blockPerson.id), :class => 'col-xs-12 btn btn-info', :style => 'float:right;margin-top:5px;' do %>
				<i class="fa fa-sort-asc"></i> Move Up
			<% end %>
		<% end %>
		<% if @blockPerson.order_count < @blockPerson.last %>
			<%= link_to move_down_page_blocks_path(@blockPerson.id), :class => 'col-xs-12 btn btn-info', :style => 'float:right;margin-top:5px;' do %>
				<i class="fa fa-sort-desc"></i> Move Down
			<% end %>
		<% end %>
	</div>
	<div class="col-xs-9" >
		<h2 style="margin-top:5px;"> <%= @blockPerson.block_type.name %></h2>
		<div class="col-xs-12 col-lg-5" style="float:right; padding-bottom: 20px;">
			<% if @blockPerson.hasPicture %>
				<%= image_tag @blockPerson.get_picture.photo.url(:small) %>
			<% else %>
				No Picture Added
			<% end %>
		</div>
		<div class="col-xs-12 col-lg-7" style="float:left;">
			<p><strong>Name:</strong> <%= @blockPerson.name %> </p>
			<p><strong>Title:</strong> <%= @blockPerson.title %> </p>
			<p><strong>Email:</strong> <%= @blockPerson.email %></p>
			<p><strong>Phone:</strong> <%= @blockPerson.phone %></p>
			<p><strong>Page:</strong> <a href="<%= @blockPerson.url %>" style="word-wrap:break-word;"><%= @blockPerson.url %></a></p>
		</div>
	</div>
	
	<div class="col-xs-12 col-lg-12"><p></p></div>
	<div class="col-xs-12 col-lg-12" style="margin-top:20px;float:left;">
		<%= link_to 'Edit Person', edit_page_blocks_path(@blockPerson.id), :remote => true, :class => 'btn btn-success' %>
		<%= link_to 'Delete Person', destroy_page_blocks_path(@blockPerson.content_page_id, @blockPerson.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
	</div>
</div>